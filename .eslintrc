{
  "parser": "babel-eslint",
  "rules": {
    "no-console": 0,
    "no-extra-boolean-cast": 0,
    "no-unused-vars": [ 1, {
        "args": "all",
        "argsIgnorePattern": "^_",
        "caughtErrors": "all",
        "caughtErrorsIgnorePattern": "^_"
    }],
    "quotes": [ 1, "single" ],
    "semi": [ 1, "always" ],
    "indent": [ 1, 4 ],
    "linebreak-style": [ 1, "unix" ],
    "prefer-const": [ 1 ],
    "no-var": [ 1 ],
    "no-restricted-globals": [ 1, "length", "top", "event" ],
    "comma-dangle": [ 1, "never"],
    "no-debugger": 1,
    "no-useless-escape": 1,
    "eqeqeq": [1, "always"]
  },
  "env": {
    "amd": true,
    "node": true,
    "browser": false // browser has endless number of shadow values, like "length"
                     // So to avoid confusion just use window.length if you really need it
  },
  "globals": {
    "window": true,
    "document": true,
    "console": true,
    "setInterval": true,
    "setTimeout": true,
    "clearInterval": true,
    "clearTimeout": true
  },
  "extends": "eslint:recommended"
}
